@using OtelMvcProje.Models.Entity
@model List<TblOnRezervasyon>
@{
    ViewBag.Title = "Rezervasyonlarim";
    Layout = "~/Views/Shared/_MisafirLayout.cshtml";
}

<h2>Rezervasyonlarım</h2>
<br />
<table class="table table-bordered">
    <tr>                      
        <th>Misafir Ad Soyad</th>
        <th>Giriş Tarihi</th>
        <th>Çıkış Tarihi</th>
        <th>Kişi</th>
        <th>Detay</th>
    </tr>
    @foreach (var x in Model)
    {
    <tr>
        <td>@x.AdSoyad</td>
        <td>@(((DateTime)x.Giriş).ToString("dd-MMM-yyyy"))</td>
        <td>@(((DateTime)x.CikisTarihi).ToString("dd-MMM-yyyy"))</td>
        <td>@x.Kişi</td>
        <td><a href="#" class="btn btn-primary"Detaylar></a></td>
    </tr>
    }
</table>

